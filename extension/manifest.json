{
    "name": "Everest",
    "version": "1.0",
    "description": "Increase productivity!",
    "permissions": ["activeTab", "declarativeContent", "storage", "alarms", "tabs"],
    "background": {
        "scripts": ["constants.js", "storage.js", "background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://www.gstatic.com; object-src 'self'",
    "options_page": "settings.html",
    "manifest_version": 2
}